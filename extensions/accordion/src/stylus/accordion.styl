.accordion
  margin: 0
  margin-bottom: $margin
  padding: 0
  max-width: 100%
  border-radius: $borderRadius
  list-style: none
  *
    box-sizing: border-box

  [type=number]::-webkit-inner-spin-button,
  [type=number]::-webkit-outer-spin-button
    margin: 0
    -webkit-appearance: none

  [type=number]
    -moz-appearance: textfield

  &.is-clean
    margin-top: $margin

  &-item
    position: relative
    padding: $paddingPx
    border-radius: $borderRadius
    background-color: $clWhite
    color: $clBlack
    border: $border solid black

    &:not(:last-child)
      margin-bottom: 10px

    &.is-active
      >.accordion-title
        color: $clPrimary
        >.accordion-icon
          transform: rotate(135deg)

    .is-clean &
      margin-bottom: 0
      border: 0

  &-body
    overflow: hidden
    margin: 0
    height: 0
    transition: 0.4s
    transition-timing-function: cubic-bezier(0, 0, 0.3, 1)
    @extends $normal

    .is-active > &
      margin-top: $margin
      height: auto

  &-list
    margin: 0 0 0 $margin
    padding: 0
    list-style: none

    li
      padding: $padding

    a
      color: $clBlack
      text-decoration: none

      &:hover,
      &.is-active
        color: $clPrimary

  &-title
    position: relative
    display: block
    width: 100%
    cursor: pointer
    text-decoration: none
    user-select: none
    @extend $large
    &:hover
      color: $clPrimary

  &-icon
    position: absolute
    {$endDir}: 0
    top: 40%
    width: unitRes(10, 15)
    height: unitRes(10, 15)
    border-width: 0 0 $border $border
    border-color: $clBlack
    border-style: solid
    transform: rotate(-45deg)
