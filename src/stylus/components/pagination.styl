.pagination
  display: flex
  align-items: top
  margin: $margin 0
  flex-wrap: wrap

  &-item, &-next, &-prev, &-first, &-last
    position: relative
    display: inline-flex
    justify-content: center
    align-items: center
    width: 2em
    height: 2em
    outline-width: 0
    outline-offset: 0
    border: none
    text-decoration: none
    cursor: pointer
    background: $clWhite
    font-size: inherit
    _icon-color: $clBlack
    @extend $normal

    &.is-active, &:active, &:hover:not(.is-disabled)
      color: $clPrimary
      _icon-color: $clPrimary

    &.is-disabled
      border-color: $gray
      color: $gray
      _icon-color: $gray

    &:focus
      outline-color: 0

    .icon
      width: 1.4em
      height: 1.4em

  generateSizes()