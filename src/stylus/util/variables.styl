/**
 * Device Breakpoint
 */
$mobile ?= 0
$tablet ?= 768px
$desktop ?= 991px
$widescreen ?= 1360px
$ultrawide ?= 1920px
/**
 * typography
 */
$margin ?= 10px
$padding ?= 0.5em
$paddingPx ?= 20px
$modalSpacing ?= unitRes(20, 60)
$borderRadius ?= 0
$border ?= 2px
$fontTiny ?= 12px
$fontSmall ?= 14px
$font ?= 16px
$fontLarge ?= 24px
$fontMassive ?= 30px
$lineheight ?= 1.1875
$header1 ?= unitRes(48, 128)
$header2 ?= unitRes(40, 96)
$header3 ?= unitRes(32, 72)
$header4 ?= unitRes(24, 56)
$header5 ?= unitRes(20, 32)
$header6 ?= unitRes(16, 24)
$fontWeight-default ?= 400
$fontWeight-normal ?= 500
$fontWeight-bold ?= 800
$fontWeight-super ?= 900
$font-family ?= -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
/**
 * * elements size
* */
$size-tiny ?= unitRes(10, 12)
$size-small ?= unitRes(12, 16)
$size-normal ?= unitRes(14, 24)
$size-large ?= unitRes(16, 32)
$size-massive ?= unitRes(20, 40)
/**
 * grid
 */
$columns ?= 12
$direction ?= ltr
$startDir ?= $direction == 'ltr' ? left : right
$endDir ?= $direction == 'ltr' ? right : left
$gutter ?= 3.125vw
$gutterFull ?= 8vw
$container-mobile ?= calc(100% - 22px)
$container-tablet ?= $tablet - (22 * 2)
$container-desktop ?= $desktop - (22 * 3)
$container-widescreen ?= $widescreen - (22 * 4)
$container-ultrawide ?= $ultrawide - (22 * 5)
/**
 * Enable/Disable css variables
 */
$cssVar ?= false
$modifiers ?= 'block' 'tiny' 'small' 'normal' 'large' 'massive' 'rounded' 'black' 'inverse' 'disabled' 'primary' 'primary.is-inverse' 'secondary' 'secondary.is-inverse' 'info' 'info.is-inverse' 'success' 'success.is-inverse' 'warning' 'warning.is-inverse' 'danger' 'danger.is-inverse' 'white' 'white.is-inverse'
