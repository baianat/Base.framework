.textarea
  display: block
  margin-bottom: $margin
  padding: $padding
  min-width: 100%
  max-width: 100%
  border: $border solid $clBlack
  border-radius: $borderRadius
  text-align: $startDir
  line-height: 1.2

  &:focus
    outline: 0
    border-color: $clSecondary

  /**
   * modiffers
   */
  generateSizes()

  &.is-black
    border-color: $clBlack

  &.is-primary
    border-color: $clPrimary

  &.is-secondary
    border-color: $clSecondary

  &.is-info
    border-color: $clInfo

  &.is-success
    border-color: $clSuccess

  &.is-warning
    border-color: $clWarning

  &.is-danger
    border-color: $clDanger

  &.is-white
    border-color: $clWhite

  &:disabled, &.is-disabled
    cursor: not-allowed
    background: $clBlack
    color: $clWhite
    border-color: $clBlack

  &.is-disabled
    pointer-events: none

  &:focus
    outline: none
    border-color: $clSecondary